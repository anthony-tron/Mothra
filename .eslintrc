env:
  node: true
  browser: true
plugins:
  - simple-import-sort
extends:
  - next/core-web-vitals
  - plugin:prettier/recommended
parserOptions:
  ecmaVersion: 6
  sourceType: module
  ecmaFeatures:
    modules: true
rules:
  indent:
    - error
    - 2
  linebreak-style:
    - error
    - unix
  quotes:
    - error
    - single
  semi:
    - error
    - always
  simple-import-sort/imports: error
  simple-import-sort/exports: error
